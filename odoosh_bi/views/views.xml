<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="odoosh_bi.list">
      <field name="name">odoosh_bi list</field>
      <field name="model">odoosh_bi.odoosh_bi</field>
      <field name="arch" type="xml">
        <tree>
          <field name="db_host"/>
          <field name="db_user_name"/>
          <field name="db_password"/>
          <field name="db_name"/>
          <field name="db_port"/>
          <field name="db_file" filename="db_filename"/>
          <field name="db_filename" invisible="1"/>
          <button name="run_script" string="Start" type="object" class="oe_highlight"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="odoosh_bi.action_window">
      <field name="name">odoosh_bi window</field>
      <field name="res_model">odoosh_bi.odoosh_bi</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="odoosh_bi.action_server">
      <field name="name">odoosh_bi server</field>
      <field name="model_id" ref="model_odoosh_bi_odoosh_bi"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <!-- <menuitem name="odoosh_bi" id="odoosh_bi.menu_root"/> -->
    <menuitem name="BI Connector Script" id="odoosh_bi.menu_root" action="odoosh_bi.action_window"/>

    <!-- menu categories -->

